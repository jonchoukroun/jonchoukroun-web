<div
  class="d-flex flex-column justify-content-start p-0 window-card"
>
  <WindowHeader
    @windowId={{this.elementId}}
    @cardBodyId=""
    @windowTitle="Welcome!"
    @icon="computer"
    @showMinimizeButton={{false}}
    @showCloseButton={{true}}
  />
  <div
    class="jumbotron bg-gray mb-0"
  >
    <h1
      class="title text-center"
    >
      Jon Choukroun
    </h1>

    <p
      class="lead text-blue text-center"
    >
      Full stack engineer
    </p>

    <p
      class="text-center"
    >
      This site is a work in progress. Please visit again soon for more info on my projects.
    </p>
  </div>

  <div class="d-flex flex-row justify-content-center mb-3 px-5">
    <a
      id="github-link"
      href="https://github.com/jonchoukroun"
      target="_blank"
      rel="noopener"
      class="btn btn-primary btn-lg btn-block"
    >
      <div class="btn-inner">
        <u>G</u>ithub
      </div>
    </a>

    <span class="mx-2"></span>

    {{#link-to
      "projects"
      id="projects-link"
      class="btn btn-primary btn-lg btn-block"
    }}
      <div class="btn-inner">
        <u>P</u>rojects
      </div>
    {{/link-to}}
  </div>

  <div class="d-none d-md-flex justify-content-center">
    <p class="small">Use the underlined keyboard shortcuts for easier navigation.</p>
  </div>
</div>
