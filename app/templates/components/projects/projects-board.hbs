<div class="d-flex flex-row justify-content-center">
  <div class="col-sm-8 col-lg-5 col-xl-4">
    <p class="small text-center non-drag-text text-gray">Drag and drop for better viewing.</p>
    <p class="small text-center drag-text text-gray">Release inside dark box to move.</p>
  </div>
</div>

{{#each-in projects as |idx project|}}
  {{#let (component "projects/project-card") as |ProjectCard|}}
    <ProjectCard
      @project={{project}}
      @priority={{idx}}
      @movedX={{cardX}}
      @movedY={{cardY}}
      @movedCardId={{cardId}}
    />
  {{/let}}
{{/each-in}}
